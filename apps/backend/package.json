{
  "name": "backend",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "lint": "bunx @biomejs/biome check src",
    "format": "bunx @biomejs/biome format src --write",
    "db:generate": "bunx tsx node_modules/.bin/drizzle-kit generate",
    "db:migrate": "bunx tsx node_modules/.bin/drizzle-kit migrate",
    "db:push": "bunx tsx node_modules/.bin/drizzle-kit push",
    "db:studio": "bunx tsx node_modules/.bin/drizzle-kit studio"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@types/bun": "latest",
    "drizzle-kit": "^0.31.8",
    "tsx": "^4.21.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.1",
    "@elysiajs/swagger": "^1.3.1",
    "drizzle-orm": "^0.45.1",
    "elysia": "^1.4.22",
    "postgres": "^3.4.8",
    "zod": "^4.3.6"
  }
}
